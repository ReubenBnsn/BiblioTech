<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#537BDF</item>
        <item name="android:windowBackground">#E9EEFB</item>
    </style>

    <style name="TitleAppearance">
        <item name="android:textSize">35sp</item>   <!-- setting the size! -->
        <item name="android:textColor">#451F55</item>           <!-- setting the text's color -->
        <item name="android:lineSpacingExtra">4dp</item>        <!-- Adding extra line spacing -->
        <item name="android:lineSpacingMultiplier">1.2</item>   <!-- Setting the line height multiplier -->
        <item name="android:fontFamily">sans-serif</item>       <!-- setting the font -->
        <item name="android:textStyle">normal</item>              <!-- Setting the style -->
    </style>

    <style name="LogoAppearance">
        <item name="android:textSize">25sp</item>   <!-- setting the size! -->
        <item name="android:textColor">#FBF6E9</item>           <!-- setting the text's color -->
        <item name="android:lineSpacingExtra">3dp</item>        <!-- Adding extra line spacing -->
        <item name="android:lineSpacingMultiplier">1.2</item>   <!-- Setting the line height multiplier -->
        <item name="android:fontFamily">serif-monospace</item>       <!-- setting the font -->
        <item name="android:textStyle">bold</item>              <!-- Setting the style -->
    </style>


    <style name="DefaultText">  <!-- setting the default colour to a visible nice one -->
        <item name="android:textColor">#451F55</item>
    </style>


</resources>