<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9EEFB"
    tools:context=".LoginActivity"
    tools:ignore="ExtraText"> <!-- Nice background colour! -->


    <!-- Title (Home) -->
    <TextView
        android:id="@+id/HomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home"
        android:textAppearance="@style/TitleAppearance"
        android:layout_marginBottom="100dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03"
    />


    <!-- Button 1 (Settings) -->
    <Button
        android:id="@+id/settingsButton"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="40dp"
        android:enabled="true"
        android:text="@string/settings"

        app:layout_constraintTop_toBottomOf="@id/HomeTitle"
        app:layout_constraintBottom_toTopOf="@id/bookCatalogueButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.5"
    />

    <!-- Button 2 (Book Catalogue) -->
    <Button
        android:id="@+id/bookCatalogueButton"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:enabled="true"
        android:text="@string/book_catalogue"

        app:layout_constraintBottom_toTopOf="@id/personalInformationButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settingsButton"
        app:layout_constraintVertical_bias="0.2"
        />


    <!-- Button 3 (Personal Information) -->
    <Button
        android:id="@+id/personalInformationButton"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:enabled="true"
        android:text="@string/personal_information"

        app:layout_constraintBottom_toTopOf="@id/bookRequestsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookCatalogueButton"
        app:layout_constraintVertical_bias="0.2"
        />


    <!-- Button 4 (Book Requests) -->
    <Button
        android:id="@+id/bookRequestsButton"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="60dp"
        android:enabled="true"
        android:text="@string/book_requests"

        app:layout_constraintBottom_toTopOf="@id/brandTag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/personalInformationButton"
        app:layout_constraintVertical_bias="0.2"
        />

    <!-- Logo at the page bottom -->
    <TextView
        android:id="@+id/brandTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textAppearance="@style/LogoAppearance"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="100dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintHorizontal_bias="0.5"
    />


</androidx.constraintlayout.widget.ConstraintLayout>