<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9EEFB"
    tools:context=".LoginActivity"
    tools:ignore="ExtraText"
    > <!-- setup stuff (with the nice background colour!) -->


    <!-- Title (Manage Book) -->
    <TextView
        android:id="@+id/manageBookTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/manage_book"
        android:textAppearance="@style/TitleAppearance"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03"
        />

    <!-- Manage book fields container! x -->
    <LinearLayout
        android:id="@+id/manageBookLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"

        app:layout_constraintTop_toBottomOf="@id/manageBookTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >


        <!-- EMAIL Card view (so I can add rounded corners) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="15dp"
            >

            <!-- Layout for Contact Email! -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="8dp"
                >

                <!-- edit book title -->
                <EditText
                    android:id="@+id/editBookTitle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="@string/title"
                    android:background="@android:color/transparent"
                    android:textSize="16sp"
                    android:inputType="textPersonName"
                    android:enabled="true"
                    android:autofillHints="Book Author"
                    />

                <!-- edit book author -->
                <ImageView
                    android:id="@+id/editBookTitleSymbol"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:contentDescription="@string/edit_field"

                    app:tint="#646978"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- FIRSTNAME Card view (so I can add rounded corners!) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="15dp"
            >

            <!-- first name layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="8dp"
                >

                <!-- author -->
                <EditText
                    android:id="@+id/editBookAuthor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="@string/author"
                    android:background="@android:color/transparent"
                    android:textColor="#444"
                    android:textSize="16sp"
                    android:inputType="textPersonName"
                    android:enabled="true"
                    android:autofillHints="Book Author"
                    />

                <!-- Author - edit symbol -->
                <ImageView
                    android:id="@+id/editBookAuthorSymbol"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:contentDescription="@string/edit_field"

                    app:tint="#646978"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Book Issue date Card view (so I can add rounded corners) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="15dp"
        >

            <!-- book issue date layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="8dp"
            >

                <!-- book issue date edittext -->
                <EditText
                    android:id="@+id/editBookIssueDate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="@string/issue_date"
                    android:background="@android:color/transparent"
                    android:textColor="#444"
                    android:textSize="16sp"
                    android:inputType="date"
                    android:enabled="true"
                    android:autofillHints="Book Issue Date"
                />

                <!-- Book issue date edit symbol -->
                <ImageView
                    android:id="@+id/editBookIssueDateSymbol"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:contentDescription="@string/edit_field"

                    app:tint="#646978"
                />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


                <!-- Book Return date Card view (so I can add rounded corners) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginBottom="15dp"
                    >

                    <!-- book return date layout -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="8dp"
                        >

                        <!-- book return date edittext -->
                        <EditText
                            android:id="@+id/editBookReturnDate"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:hint="@string/return_date"
                            android:background="@android:color/transparent"
                            android:textColor="#444"
                            android:textSize="16sp"
                            android:inputType="date"
                            android:enabled="true"
                            android:autofillHints="Book Return  Date"
                            />

                        <!-- Book issue date edit symbol -->
                        <ImageView
                            android:id="@+id/editBookReturnDateSymbol"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_edit"
                            android:contentDescription="@string/edit_field"

                            app:tint="#646978"
                            />

                    </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- Current Book Borrower Card view (so I can add rounded corners!) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="15dp"
            >

            <!-- Current Book Borrower -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="8dp"
                >

                <!-- Current Book Borrower -->
                <EditText
                    android:id="@+id/editCurrentBookBorrower"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="@string/current_borrower"
                    android:background="@android:color/transparent"
                    android:textColor="#444"
                    android:textSize="16sp"
                    android:inputType="textPersonName"
                    android:enabled="true"
                    android:autofillHints="Current Borrower"
                    />

                <!-- Current Book Borrower - edit symbol -->
                <ImageView
                    android:id="@+id/editCurrentBookBorrowerSymbol"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:contentDescription="@string/edit_field"

                    app:tint="#646978"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </LinearLayout>


    <!-- Save Changes Button -->
    <Button
        android:id="@+id/saveChangesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:enabled="true"
        android:text="@string/save_changes"

        app:layout_constraintTop_toBottomOf="@id/manageBookLayout"
        app:layout_constraintBottom_toTopOf="@id/deleteBookButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintHorizontal_bias="0.5"
        />

    <!-- Delete Book Button -->
    <Button
        android:id="@+id/deleteBookButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="6dp"
        android:enabled="true"
        android:text="@string/delete_book"
        android:background="#F60B1B"
        android:textColor="#000000"

        app:layout_constraintTop_toBottomOf="@id/saveChangesButton"
        app:layout_constraintBottom_toTopOf="@id/backButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintHorizontal_bias="0.5"
        />



    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:enabled="true"
        android:textColor="#000000"
        android:background="#9E756FED"
        android:text="@string/back"

        app:layout_constraintBottom_toTopOf="@id/brandTag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deleteBookButton"
        app:layout_constraintHorizontal_bias="0.5"
        />


    <TextView
        android:id="@+id/brandTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textAppearance="@style/LogoAppearance"
        android:layout_marginBottom="15dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.9"
        />


</androidx.constraintlayout.widget.ConstraintLayout>