<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9EEFB"
    tools:context=".LoginActivity"
    tools:ignore="ExtraText"> <!-- Nice background colour! -->


    <!-- Title (Book Requests) -->
    <TextView
        android:id="@+id/bookRequestsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/book_requests"
        android:textAppearance="@style/TitleAppearance"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.03"
    />



    <!-- Card view for UNANSWERED book requests -->
    <androidx.cardview.widget.CardView
        android:id="@+id/unansweredRequestsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        app:cardElevation="4dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="30dp"

        app:layout_constraintTop_toBottomOf="@id/bookRequestsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
    >

        <!-- Layout for UNANSWERED requests -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"

        >

            <!-- Unanswered Requests Header -->
            <TextView
                android:id="@+id/unansweredRequestsHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#052C83"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:text="@string/unanswered_requests"
            />

            <!-- Line space between header and list -->
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#6B8AD7"
            />

            <!-- Unanswered Requests list -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/unansweredBookListWidget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:clipToPadding="false"
            />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- Card view for ANSWERED book requests -->
    <androidx.cardview.widget.CardView
        android:id="@+id/answeredRequestsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        app:cardElevation="4dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="30dp"

        app:layout_constraintTop_toBottomOf="@id/unansweredRequestsCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        >

        <!-- Layout for ANSWERED requests -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            >

            <!-- ANSWERED Requests Header -->
            <TextView
                android:id="@+id/answeredRequestsHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#052C83"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:text="@string/answered_requests"
            />

            <!-- Line space between header and list -->
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#6B8AD7"
            />

            <!-- ANSWERED Requests list -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/answeredBookListWidget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:clipToPadding="false"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- Back button xo -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:enabled="true"
        android:textColor="#000000"
        android:background="#9E756FED"
        android:text="@string/back"

        app:layout_constraintBottom_toTopOf="@id/brandTag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/answeredRequestsCard"
        app:layout_constraintHorizontal_bias="0.5"
        />


    <!-- Logo at the page bottom -->
    <TextView
        android:id="@+id/brandTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textAppearance="@style/LogoAppearance"
        android:layout_marginBottom="15dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.9"
        />


</androidx.constraintlayout.widget.ConstraintLayout>